        {
            "name": "Python Local Debugger",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/tools/run.bat",
            "args": ["${workspaceFolder}/tools", "${workspaceFolder}/framework/app.py", "conversion_template_generator"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python Remote Debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5680
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "."
                }
            ]
        }
    ]
}